# ============================================
# Price Hunter - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env or .env.local to version control

# ============================================
# Database Connection
# ============================================
# Local Development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/price_hunter

# Docker Compose
# DATABASE_URL=postgresql://postgres:postgres@db:5432/price_hunter

# Production (Supabase/Neon/Railway)
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ============================================
# Redis Connection
# ============================================
REDIS_URL=redis://localhost:6379

# Docker Compose
# REDIS_URL=redis://redis:6379

# Production (Upstash/Redis Cloud)
# REDIS_URL=rediss://default:password@hostname:6379

# ============================================
# NextAuth Configuration
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Exchange Rate API
# ============================================
# Sign up at: https://www.exchangerate-api.com/
EXCHANGE_RATE_API_KEY=your-api-key

# ============================================
# Email Notifications (Resend)
# ============================================
# Sign up at: https://resend.com/
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=alerts@yourdomain.com

# ============================================
# Telegram Bot
# ============================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGhIJKlmnOPQRsTUVwxyZ

# ============================================
# Web Push (VAPID Keys)
# ============================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_EMAIL=mailto:your-email@example.com

# ============================================
# Scraping Configuration
# ============================================
# Proxy (Optional - for avoiding blocks)
# PROXY_URL=http://user:pass@proxy.example.com:8080

# Scraping delays (milliseconds)
SCRAPE_DELAY_MIN=1000
SCRAPE_DELAY_MAX=3000

# Max concurrent scrapers
SCRAPE_CONCURRENCY=3

# ============================================
# App Configuration
# ============================================
NODE_ENV=development
PORT=3000

# Default settings
DEFAULT_COUNTRY=SA
DEFAULT_CURRENCY=SAR
